use Eloquent\Lockbox\Key\KeyGenerator;
use Eloquent\Lockbox\Key\KeyWriter;

require __DIR__ . '/../../vendor/autoload.php';

$name = null;
if (isset($_SERVER['argv'][1])) {
    $name = $_SERVER['argv'][1] ?: null;
}

$description = null;
if (isset($_SERVER['argv'][2])) {
    $description = $_SERVER['argv'][2] ?: null;
}

$encryptionSecretBits = null;
if (isset($_SERVER['argv'][3])) {
    $encryptionSecretBits = intval($_SERVER['argv'][3]) ?: null;
}

$authenticationSecretBits = null;
if (isset($_SERVER['argv'][4])) {
    $authenticationSecretBits = intval($_SERVER['argv'][4]) ?: null;
}

KeyWriter::instance()->writeStream(
    KeyGenerator::instance()->generateKey(
        $name,
        $description,
        $encryptionSecretBits,
        $authenticationSecretBits
    ),
    STDOUT
);
echo PHP_EOL;
